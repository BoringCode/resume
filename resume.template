<!doctype html>
<html>
	<head>	
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, user-scalable=no, minimal-ui">
		<title>{{#resume.basics}}{{name}}{{/resume.basics}}</title>
		<style type="text/css">{{{css}}}</style>
		<style media="print">{{printcss}}</style>
	</head>
	<body>
		<div class="control-bar">
			<a href="javascript:window.print();" class="print">Print</a>
		</div>
		{{#resume.basics}}
		<header>
			<h1>{{name}}</h1>
			<h2>{{label}}</h2>
			<div class="info">
				<a href="tel:{{phone}}">{{phone}}</a>
				<a href="{{website}}">{{website}}</a>
				<a href="mailto:{{email}}">{{email}}</a>
			</div>
		</header>
		<section class="info">
			<header>
				<h2>Overview</h2>
			</header>
			<p>{{summary}}</p>
		</section>
		{{/resume.basics}}
		<div class="row">
			<section class="education col col-2-1">
				{{#if resume.education.length}}
				<header>
					<h2>Education</h2>
				</header>
				<ul>
				{{#each resume.education}}
					<li>
						<h2>{{institution}}</h2>
						{{#if url}}
							<a href="{{url}}">{{url}}</a>
						{{/if}}
						<em>{{startDate}} &#x2013; {{endDate}}</em>
						<p>{{studyType}} {{area}}, {{gpa}} GPA</p>
						{{#if courses.length}}
						<p>
							<strong>Courses</strong> 
							{{courses}}
						</p>
						{{/if}}
					</li>
				{{/each}}
				</ul>
				{{/if}}
				{{#if resume.awards.length}}
				<header>
					<h2>Awards</h2>
				</header>
				<ul>
				{{#each resume.awards}}
					<li>
						<h4>{{title}}</h4>
						<em>{{awarder}}, {{date}}</em>
						<p>{{summary}}</p>
					</li>
				{{/each}}
				</ul>
				{{/if}}
			</section>
			{{#if resume.skills.length}}
			<section class="skills col col-2-1">
				<header>
					<h2>Skills</h2>
				</header>
				{{#each resume.skills}}
					<strong>{{name}}</strong>
					{{#if keywords.length}}
					<ul class="list">
						{{#keywords}}
						<li>{{.}}</li>
						{{/keywords}}
					</ul>
					{{/if}}
				{{/each}}
				<header>
					<h2>Projects</h2>
				</header>
				<p>Visit GitHub <a href="https://github.com/BoringCode">(https://github.com/BoringCode)</a> and my portfolio <a href="http://bradleyrosenfeld.com/portfolio/">(http://bradleyrosenfeld.com/portfolio/)</a></p>
			</section>
			{{/if}}
		</div>
		{{#if resume.work.length}}
		<section class="experience">
			<header>
				<h2>Experience</h2>
			</header>
			<ul>
				{{#each resume.work}}
				<li>
					<h2>{{company}}</h2>
					<a href="{{website}}">{{website}}</a>
					<em>{{position}} <span>{{startDate}} &#x2013; {{endDate}}</span></em>
					{{#if highlights.length}}
					<ul class="list">
						{{#highlights}}
						<li>{{.}}</li>
						{{/highlights}}
					</ul>
					{{/if}}
				</li>
				{{/each}}
			</ul>
		</section>
		{{/if}}
		<footer>
			<em>References available upon request</em>
		</footer>	
	</body>
</html>
